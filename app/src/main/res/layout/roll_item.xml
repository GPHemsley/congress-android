<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
	android:layout_width="match_parent"
	android:layout_height="wrap_content"
	android:padding="10dp"
	
	android:orientation="vertical"
	>
	
    <LinearLayout android:orientation="horizontal" 
		android:layout_width="match_parent"
		android:layout_height="wrap_content"        
        >
	
	    <RelativeLayout 
	        android:layout_width="90dp"
	        android:layout_height="wrap_content"
	        android:layout_weight="0"
	        >
	        
		    <TextView android:id="@+id/date"
				android:layout_width="wrap_content"
				android:layout_height="wrap_content"
				
				android:layout_alignParentLeft="true"
				android:layout_alignParentTop="true"
				
				android:textSize="14sp"
				
				android:text="FEB 22, '11"
				/>
		
			<TextView android:id="@+id/chamber_number"
				android:layout_width="wrap_content"
				android:layout_height="wrap_content"
				
				android:layout_alignLeft="@id/date"
				android:layout_below="@id/date"
				
				android:layout_marginTop="3dp"
				android:layout_marginRight="5dp"
				
				android:textSize="14sp"
				android:textColor="@color/text_grey"
				
				android:text="House"
				/>
			
		</RelativeLayout>
			
		<LinearLayout android:orientation="vertical"
	        android:layout_width="match_parent"
			android:layout_height="wrap_content"
	        android:layout_weight="1"
	        android:layout_marginLeft="5dp"
	        >
	    
			<TextView android:id="@+id/question"
				android:layout_width="match_parent"
				android:layout_height="wrap_content"
				
				android:lineSpacingExtra="2sp"
				
				android:textSize="14sp"
				android:text="On the Nomination PN1182"
				/>

            <LinearLayout android:id="@+id/details"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:visibility="gone"

                android:layout_marginTop="5dp"
                >

                <View android:layout_width="1dp"
                    android:layout_height="match_parent"
                    android:background="@color/text_grey"
                    />

                <TextView android:id="@+id/details_text"
                    android:layout_width="0dp"
                    android:layout_weight="1"
                    android:layout_height="wrap_content"

                    android:lineSpacingExtra="2sp"
                    android:layout_marginLeft="7dp"

                    android:textSize="12sp"
                    android:text="Michelle T. Friedland for United States Circuit Court Judge for the Ninth Circuit"
                    />
            </LinearLayout>
			
			<TextView android:id="@+id/result"
			    android:layout_width="match_parent"
				android:layout_height="wrap_content"
				
				android:layout_marginTop="5dp"
				
				android:textSize="14sp"
				android:textColor="@color/text_grey"
				android:text="Passed, 226-185"
				/>
			
		</LinearLayout>
		
	</LinearLayout>
		
</LinearLayout>