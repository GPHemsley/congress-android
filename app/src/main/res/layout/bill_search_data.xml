<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
	android:layout_width="match_parent"
	android:layout_height="wrap_content"
	
	android:orientation="vertical"
	>
	<LinearLayout android:orientation="vertical"
		android:layout_width="match_parent"
		android:layout_height="wrap_content"
		
		android:padding="10dp"
	
		android:background="@color/background_dark"
		>
	
		<TextView android:id="@+id/match_field"
			android:layout_width="wrap_content"
			android:layout_height="wrap_content"
			
			android:textSize="16sp"
			android:text="Matched the text of the bill:"
			/>
		
		<TextView android:id="@+id/highlight_field"
			android:layout_width="wrap_content"
			android:layout_height="wrap_content"
			
			android:layout_marginTop="5dp"
			
			android:textSize="14sp"
			android:textColor="@color/text_grey"
			
			android:text="Some matching text of the bill, it goes on and on, could be quite long in fact, many hundreds of characters, and will likely have to be truncated in some fashion."
			/>
			
	</LinearLayout>
</LinearLayout>